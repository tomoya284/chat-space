.main-chat
 .main-chat__header
  .main-chat__header__left
   %p.main-chat__header__left__name
    = @group.name
   %p.main-chat__header__left__member
    Memberï¼š
    - @group.users.each do |user|
     = user.name
    

  .main-chat__header__right
   = link_to edit_group_path(@group), class: "text-line" do
    %p.main-chat__header__right__btnfont
     Edit
 .main-chat__messages
  = render @messages
  
 .main-chat__footer
  = form_for [@group, @message], html: {class: "main-chat__footer__up"} do |f|
   .main-chat__footer__up__1
    = f.text_field :content, class: 'main-chat__footer__up__1__jr1', placeholder: 'type a text'
    .main-chat__footer__up__jr2
     = f.label :image, class: 'main-chat__footer__up__1__image' do
      = icon('fas', 'image')
      = f.file_field :image, class: "main-chat__footer__up__1__image__file" 
   .main-chat__footer__up__2 
    = f.submit 'Send',class: 'main-chat__footer__up__2'

     