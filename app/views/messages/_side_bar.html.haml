.side-bar
 .side-bar__header
  .side-bar__header__top-items
   = current_user.name
   .side-bar__header__top-items__left
  
   %ul.side-bar__header__top-items__right
    %li.side-bar__header__top-items__right__edit-user
     = link_to  new_group_path do
      = icon('fas', 'edit', class: 'icon')
    %li.side-bar__header__top-items__right__new-group
     = link_to edit_user_path(current_user) do
      = icon('fas', 'cog', class: 'icon')
 .side-bar__groups
  - current_user.groups.each do |group|
   = link_to group_messages_path(group), class:"group" do
    %p.group__group-name
     = group.name
    %p.group__latest-message
     = group.show_last_message
     
   

